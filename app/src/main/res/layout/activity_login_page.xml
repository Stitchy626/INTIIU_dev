<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgStudent"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/student"
            />

        <TextView
            android:id="@+id/textViewStudent"
            android:layout_below="@+id/imgStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student &amp; Staff login"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            />

        <com.shobhitpuri.custombuttons.GoogleSignInButton
            android:id="@+id/buttonSignInStudent"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewStudent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            app:isDarkTheme="true"
            android:text="Sign in with INTI email"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="25dp"
            android:layout_centerInParent="true"
            android:background="#FF0000FF" />

        <ImageView
            android:id="@+id/imgClub"
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:layout_marginTop="320dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sports"
            />

        <TextView
            android:id="@+id/textViewClub"
            android:layout_below="@+id/imgClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Club Login"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            />

        <com.shobhitpuri.custombuttons.GoogleSignInButton
            android:id="@+id/buttonSignInClub"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewClub"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            app:isDarkTheme="true"
            android:text="Sign in with Club email"/>

    </RelativeLayout>

</ScrollView>